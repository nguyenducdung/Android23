<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".btvn_buoi8.BtvnBuoi8Activity">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/layoutToolbar"/>

    <RelativeLayout
        android:id="@+id/rlLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/layoutToolbar"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/b8add_bg"
            android:src="@drawable/ic_baseline_add_circle_outline_24" />

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="0dp"
            android:layout_alignParentEnd="true"
            android:text="Them sinh vien moi"
            android:textSize="18sp"
            android:textColor="#1F9FFC"
            android:gravity="start"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imgAdd"/>
        <View
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlLayout"
        android:layout_marginStart="18dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp" />

</RelativeLayout>
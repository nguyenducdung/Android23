<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào, mình là Nguyễn Đức Dũng"
        android:textColor="@color/purple_200"
        android:textSize="40sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển thị theo chiều dọc" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển thị theo chiều ngang" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển thị theo hình ô vuông" />

    <Button
        android:id="@+id/btnKotlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin" />
    <Button
        android:id="@+id/btnPhuongTrinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giải Phương trình" />
    <Button
        android:id="@+id/btnbai7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btvn buoi 7" />


</LinearLayout>
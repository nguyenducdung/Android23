<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/user_bg"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp">
    <ImageView
        android:id="@+id/imgUserAvatar"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_width="52dp"
        android:layout_height="52dp"/>
    <TextView
        android:id="@+id/tvUserName"
        tools:text="Ten:Vo Huu Thinh"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_bold"
        android:layout_toEndOf="@id/imgUserAvatar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvUserAddr"
        tools:text="Dia chi: Trieu Khuc, Thanh Xuan, Ha Noi"
        android:layout_below="@id/tvUserName"
        android:textSize="14sp"
        android:textColor="#5E5B5B"
        android:fontFamily="@font/roboto_regular"
        android:layout_toEndOf="@id/imgUserAvatar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvUserPhone"
        tools:text="Phone: 0123456789"
        android:layout_below="@id/tvUserAddr"
        android:textSize="14sp"
        android:textColor="#5E5B5B"
        android:fontFamily="@font/roboto_regular"
        android:layout_toEndOf="@id/imgUserAvatar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
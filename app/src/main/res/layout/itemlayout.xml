<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:background="@drawable/shapeimage"
        android:id="@+id/img_anh"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thitquay"/>
    <LinearLayout
        android:layout_marginStart="14dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/img_anh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Mua ban co tam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_fan"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="8k fan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_sobaiviet"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="+10 bai viet moi nhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_nhom"
            android:textSize="11sp"
            android:layout_marginTop="11dp"
            android:text="nhom dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buoi7.Buoi7BarActivity">

    <include layout="@layout/layout_toolbar2"
        android:id="@+id/toolbar"/>

    <EditText
        android:id="@+id/edTenthumuc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edt_background"
        android:hint="Nhập tên thư mục"
        android:paddingStart="16dp"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/edTenthumuc"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edt_background"
        android:hint="Nhập mô tả thư mục"
        android:paddingBottom="95dp"
        android:paddingStart="10dp"

        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvData"
        app:menu="@menu/menu"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
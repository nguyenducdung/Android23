<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập thông tin cá nhân"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_editext"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        android:padding="15dp"
        android:textColor="#333333"
        android:textSize="18sp" />

    <EditText

        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_editext"
        android:hint="Nhập Email"
        android:inputType="textEmailSubject"
        android:padding="15dp"
        android:textColor="#333333"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtName"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_editext"
        android:hint="Nhập tên đầy đủ"
        android:padding="15dp"
        android:textColor="#333333"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_editext"
        android:hint="Nhập tên cơ quan"
        android:padding="15dp"
        android:textColor="#333333"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_editext"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_editext"
        android:backgroundTint="#1F9FFC"
        android:gravity="center"
        android:padding="20dp"
        android:text="Tiếp tục"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textColor="#E40000"
        tools:text="Email của bạn không đúng. Vui lòng nhập lại" />

    <TextView
        android:id="@+id/tvError1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="#E40000"
        tools:text="Tên của bạn không đúng. Vui lòng nhập lại" />

    <TextView
        android:id="@+id/tvError2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="#E40000"
        tools:text="Cơ quan của bạn không đúng. Vui lòng nhập lại" />

    <TextView
        android:id="@+id/tvError3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="#E40000"
        tools:text="Mật khẩu của bạn không đúng. Vui lòng nhập lại" />

</LinearLayout>